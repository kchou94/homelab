version: '3.8'
services:
  jenkins:
    image: jenkins/jenkins:"{{ jenkins_image_version }}"
    name: jenkins
    networks:
      - homelab
    ports:
      - 8080:8080
      - 50000:50000
    container_name: jenkins-lts
    volumes:
      - "{{ jenkins_dir }}/jenkins_home:/var/jenkins_home"
      - "/var/run/docker.sock:/var/run/docker.sock"
      # - "/usr/bin/docker:/usr/bin/docker"
    restarts: on-failure
